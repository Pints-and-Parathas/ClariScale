{
  "manifest_version": 3,
  "name": "Political Scale",
  "key": "INSERT_KEY_HERE",
  "version": "1.0",
  "description": "A Chrome extension powered by React",
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "bundle.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "web_accessible_resources": [
    {
      "resources": ["bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
