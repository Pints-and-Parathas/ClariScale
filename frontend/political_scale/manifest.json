{
  "manifest_version": 3,
  "name": "Political Scale",
  "version": "1.0",
  "description": "A Chrome extension powered by React",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_icon": {
      "16": "icon.jpeg",
      "48": "icon.jpeg",
      "128": "icon.jpeg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "bundle.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "web_accessible_resources": [
    {
      "resources": ["bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
